<h1>Users</h1>

<div class="d-flex">
  <%= link_to "New User", new_admin_user_path, class: "btn btn-primary me-3" %>
  <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-warning" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <%= link_to "Show", admin_user_path(user) %> |
          <%= link_to "Edit", edit_admin_user_path(user) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
