<%= form_with model: [:admin, user] do |form| %>
  <div class="row mt-3">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :first_name, class: "form-label" %>
        <%= form.text_field :first_name, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :last_name, class: "form-label" %>
        <%= form.text_field :last_name, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :telegram_id, "Telegram ID", class: "form-label" %>
        <%= form.text_field :telegram_id, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :telegram_username, class: "form-label" %>
        <%= form.text_field :telegram_username, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :role, class: "form-label" %>
        <%= form.text_field :role, class: "form-control" %>
      </div>
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
